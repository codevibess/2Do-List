<div class="jumbotron text-center">
    <h1>All Todos</h1>
</div>

<% if (success.length > 0) { %>
    <div class="alert alert-success"><%= success %></div>
<% } %>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Todo Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        
        <% for (var todo of todos) { %>
            <tr>
                <td><%= todo.name %></td>
                <td><%= todo.description %></td>
                <td>
                    <a href="/todos/<%= todo.slug %>" class="btn btn-sm btn-primary">View</a>
                    <a href="/todos/<%= todo.slug %>/edit" class="btn btn-sm btn-primary">Edit</a>
                    <a href="/todos/<%= todo.slug %>/delete" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        <% } %>

    </tbody>
</table>